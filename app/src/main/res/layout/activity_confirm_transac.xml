<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTransac"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/t_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Name"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorTxt"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorBg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView android:id="@+id/t_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textSize="17dp"/>

            <TextView android:id="@+id/t_esti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated Time of Transaction: "
                android:textSize="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Info "
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorTxt"/>

            <TextView android:id="@+id/t_arriv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrive at: "
                android:textSize="17dp"/>

            <TextView android:id="@+id/t_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="17dp"/>

            <Button android:id="@+id/t_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="80dp"
                android:text="Confirm"/>

            <Button android:id="@+id/t_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Back"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>