<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@color/colorBg">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/logo2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="10dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:id="@+id/up_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <EditText android:id="@+id/up_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/colorTxt"
                        android:maxLength="50"
                        android:tooltipText="Max. 50 Characters"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <EditText android:id="@+id/up_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/colorTxt"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <EditText android:id="@+id/up_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/colorTxt"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact number"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <EditText android:id="@+id/up_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text=""
                        android:inputType="phone"
                        android:textSize="20dp"
                        android:textColor="@color/colorTxt"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>

                    <EditText android:id="@+id/up_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/colorTxt"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/up_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Password"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>

                    <EditText android:id="@+id/up_curpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:inputType="textPassword"
                        android:textColor="@color/colorTxt"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Password"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>

                    <EditText android:id="@+id/up_newpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:inputType="textPassword"
                        android:textColor="@color/colorTxt"
                        android:maxLength="50"
                        android:tooltipText="Max. 50 Characters"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <Button android:id="@+id/up_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Info"
                        android:background="#a4f18912"/>

                    <Button android:id="@+id/up_save1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:background="#a4f18912"
                        android:visibility="gone"/>

                    <Button android:id="@+id/up_editpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Password"
                        android:layout_marginTop="5dp"
                        android:background="#a4f18912"/>

                    <Button android:id="@+id/up_save2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:background="#a4f18912"
                        android:visibility="gone"/>

                    <Button android:id="@+id/up_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_marginTop="5dp"
                        android:background="#a4f18912"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"/>

                    <Button android:id="@+id/up_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:layout_marginTop="5dp"
                        android:background="#a4f18912"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>